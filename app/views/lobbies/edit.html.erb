<% if notice %><p style="color: green"><%= notice %></p><% end %>

<h2>Lobby</h2>

<%= render "form", lobby: @lobby do %>
  <%= button_tag "Update", form: "form" %>
  <%= button_to "Destroy", @lobby, method: :delete %>
  <%= button_to "Cancel", @lobby, method: :get %>
<% end %>

<h2>Tiles</h2>

<div id="tiles">
  <% @lobby.tiles.each do |tile| %>
    <%= link_to edit_lobby_tile_path(@lobby, tile) do %>
      <%= render tile %>
    <% end %>
  <% end %>
  <%= link_to new_lobby_tile_path(@lobby) do %>
    <div class="new tile">Add new tile</div>
  <% end %>
</div>

<%= form_tag(controller: "lobbies", action: "generate_tiles") do %>
  <%= label_tag "Automatically generate number of tiles:" %>
  <%= number_field_tag :count %>
  <%= submit_tag %>
<% end %>
