<p style="color: green"><%= notice %></p>

<h1>Cards</h1>

<div id="cards">
  <% @cards.each do |card| %>
    <%= render card %>
    <p>
      <%= link_to "Show this card", [@lobby, card] %>
    </p>
  <% end %>
</div>

<%= link_to "New card", new_lobby_card_path %> |
<%= link_to "Back to lobby", lobby_path(@lobby) %>
