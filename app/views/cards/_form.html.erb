<% if card.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

    <ul>
      <% card.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="player">
  <%= form_with(model: [@lobby, card], id: "form") do |form| %>
    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <%= form.fields_for :card_tiles do |card_tiles_form| %>
      <%= card_tiles_form.hidden_field :tile_id %>
    <% end %>
  <% end %>
  <%= yield %>
</div>
